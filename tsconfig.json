{
  "compilerOptions": {
    "target": "ES2018",
    "strict": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./js",
    "rootDir": ".",
    "declaration": true,
    "sourceMap": true
  },
  "include": ["ts"],
  "exclude": ["test", "node_modules"]
}
